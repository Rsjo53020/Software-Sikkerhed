@model Cart
@{
    ViewData["Title"] = "Cart";
}

@await Html.PartialAsync("_StatusMessage")

<h1>Your cart</h1>

@if (Model == null || !Model.Items.Any()){
    <p>Your cart is empty.</p>
    <a asp-controller="Product" asp-action="Search" class="btn btn-primary">Keep shopping</a>
}
else
{
    <div>
        <partial name="_CartPartial" model="Model" />
    </div>

    <br />

    <form asp-controller="Checkout" asp-action="Checkout" method="get" style="display:inline;">
        <button type="submit" class="btn btn-success">Check out</button>
    </form>

    <a asp-controller="Product" asp-action="Search" class="btn btn-link">Keep shopping</a>
}