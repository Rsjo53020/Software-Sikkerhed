@model BlogEntry?

@{
    ViewData["Title"] = "Create";
}

@await Html.PartialAsync("_StatusMessage")

<h1>Create a new blog entry</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text"
            id="Title"
            name="Title"
            class="form-control blogCreateTitleText" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Contents">Contents</label>
        <textarea id="Contents"
                name="Contents"
                rows="4"
                class="form-control blogCreateContents"></textarea>
        <span asp-validation-for="Contents" class="text-danger"></span>
    </div>

    <br />

    <a asp-action="Index" class="btn btn-link" style="float: left;">Cancel</a>
    <input type="submit" value="Submit" class="btn btn-primary" style="float: right;" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}