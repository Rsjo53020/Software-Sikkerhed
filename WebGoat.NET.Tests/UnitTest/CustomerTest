using WebGoat.NET.Model;
using Xunit;

namespace WebGoat.NET.Tests.UnitTest;
    public class CustomerTest
    {
        [Fact]
        public void GivenData_WhenCreateACustomer_ThenPropertiesAreSetCorrectly()
        {
            // Given
            var newGuid = "1";
            var companyName = "Test Company";
            var contactName = "Ronni";
            var address = "Julesvej 24th";
            var city = "langt ude på indlandsisen";
            var region = "Julens rige";
            var postalCode = "6666";
            var country = "Greenland";
            
            // When
            var newCustomer = new Customer
            {
                CustomerId = newGuid,
                CompanyName = companyName,
                ContactName = contactName,
                Address = address,
                City = city,
                Region = region,
                PostalCode = postalCode,
                Country = country
            };

            // Then
            Assert.Equal("1", newCustomer.CustomerId);
            Assert.Equal("Test Company", newCustomer.CompanyName);
            Assert.Equal("Ronni", newCustomer.ContactName);
            Assert.Equal("Julesvej 24th", newCustomer.Address);
            Assert.Equal("langt ude på indlandsisen", newCustomer.City);
            Assert.Equal("Julens rige", newCustomer.Region);
            Assert.Equal("6666", newCustomer.PostalCode);
            Assert.Equal("Greenland", newCustomer.Country);
        }
    }